doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        meta(name="robots" content="noindex, nofollow")
        meta(name="description" content="View your online activity at FFBB.")
        meta(property="og:title" content="FFBB - Was I online?")
        meta(property="og:description" content="View your online activity at FFBB.")
        meta(property="og:image" content="img/social.png")
        meta(property="og:site_name" content="FFBB inc.")
        title FFBB - Home
        link(href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css")
        link(href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet")
        link(href="css/sb-admin-2.min.css" rel="stylesheet")
    body.bg-gradient-primary
        .container
            .row.justify-content-center
                .col-xl-10.col-lg-12.col-md-9
                    .card.o-hidden.border-0.shadow-lg.my-5
                        .card-body.p-0
                            .row.justify-content-center
                                .col-lg-6
                                    .p-5
                                        .text-center
                                            h1.h4.text-gray-900.mb-2 View how long you have been using Facebook.
                                            p.mb-4 View analysis of your facebook online data. Starting from: #{ana_start_date}
                                            p.mb-4 Database last updated: #{db_last_update}
                                        form.user(action="qq" method="POST" enctype="application/x-www-form-urlencoded")
                                            .form-group
                                                input.form-control.form-control-user(type="text" name="query" placeholder="Enter username or profile url or numeric ID")
                                            input.btn.btn-primary.btn-user.btn-block(value="Show Me!" type="submit")
                                        hr
            footer.sticky-footer
                .container
                    .copyright.text-center.my-auto
                        span
                            | Theme provided by 
                            a(style="color: #FFF;" href="https://startbootstrap.com/theme/sb-admin-2") StartBootstrap
                    .copyright.text-center.my-auto
                        span Copyright Â© FFBB 2021
        script(src="vendor/jquery/jquery.min.js")
        script(src="vendor/bootstrap/js/bootstrap.bundle.min.js")
        script(src="vendor/jquery-easing/jquery.easing.min.js")
        script(src="js/sb-admin-2.min.js")
